{% extends '_layouts/standard.html.twig' %}

{% block title %}S'inscrire sur Y{% endblock %}

{% block content %}
    <div class="content-wrapper">
        <div class="home-container">
            <section class="home-card">
                <h1 class="home-title">Rejoindre Y</h1>
                <p class="home-tagline">Prêt à exprimer votre toxicité ?</p>

                {{ form_start(registrationForm, {'attr': {'class': 'y-form'}}) }}

                <div class="form-group">
                    {{ form_widget(registrationForm.username, {'attr': {'placeholder': 'Nom d\'utilisateur'}}) }}
                    {{ form_errors(registrationForm.username) }}
                </div>

                <div class="form-group">
                    {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'Email'}}) }}
                    {{ form_errors(registrationForm.email) }}
                </div>

                <div class="form-group">
                    {{ form_widget(registrationForm.plainPassword, {
                        'label': false,
                        'attr': {'placeholder': 'Mot de passe'}
                    }) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>

                <div class="form-terms">
                    {{ form_widget(registrationForm.agreeTerms) }}
                    {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions (ou pas)') }}
                </div>

                <div class="home-actions">
                    <button type="submit" class="btn btn-solid">Créer mon compte</button>
                </div>

                <div class="form-footer">
                    <a href="{{ path('app_login') }}" class="link-muted">Déjà un adepte ? Connectez-vous</a>
                </div>

                {{ form_end(registrationForm) }}
            </section>
        </div>
    </div>
{% endblock %}
